# Clawsino Production Environment — Base Mainnet
# Copy to .env and fill in your values

# RPC — Base mainnet (use Alchemy, Infura, or Coinbase Cloud)
RPC_URL=https://mainnet.base.org

# Game Server Wallet (MUST be a dedicated wallet — funds payouts)
GAME_SERVER_PRIVATE_KEY=0x_YOUR_GAME_SERVER_PRIVATE_KEY
GAME_SERVER_ADDRESS=0x_YOUR_GAME_SERVER_ADDRESS

# House/Deployer Wallet
DEPLOYER_PRIVATE_KEY=0x_YOUR_DEPLOYER_PRIVATE_KEY
HOUSE_ADDRESS=0x_YOUR_HOUSE_ADDRESS

# Contract Addresses (deploy via forge script or verify on Basescan)
USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
PAYOUT_ADDRESS=0x_YOUR_DEPLOYED_PAYOUT_CONTRACT
VERIFIER_ADDRESS=0x_YOUR_DEPLOYED_VERIFIER_CONTRACT

# Server
PORT=3000
NODE_ENV=production

# x402 Mode — must be "onchain" for production
X402_MODE=onchain

# x402 Facilitator (Coinbase hosted)
FACILITATOR_URL=https://x402.org/facilitator

# Network
NETWORK=eip155:8453

# CORS — set to your frontend domain(s), comma-separated
CORS_ORIGINS=https://clawsino.xyz,https://www.clawsino.xyz

# Pay-to address (usually the payout contract or house wallet)
PAY_TO_ADDRESS=0x_YOUR_PAYOUT_CONTRACT_OR_HOUSE_WALLET
